<h1> <%= @board.name %> </h1>


<% @board.lists.each do |list| %>
  <div>
    <h3><%= link_to list.name, [@board, list] %></h3>
  </div>
<% end %>

<%= link_to 'New List', new_board_list_path(@board), class: "ui purple button"  %>
<%= link_to 'View Lists', board_lists_path(@board), class: "ui purple button" %>
<br/>
<br/>
<%= link_to "Edit Board", edit_board_path(@board), class: "ui blue button" %>
<%= link_to "Delete Board", board_path(@board), method: :delete, class: "ui red button" %>
