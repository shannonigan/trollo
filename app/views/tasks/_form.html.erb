<%= form_with(model: @task, url: [@list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input" %>
  </div>
 <div class="field">
   <%= f.label :priority %>
   <%= f.text_field :priority, class: "input" %>
 </div>
 <%= f.submit nil, class: "ui blue button" %>
<% end %>